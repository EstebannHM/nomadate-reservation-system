<div id="authModal" class="modal-overlay hidden">
    <div class="modal">
        <span id="closeModal" class="close">&times;</span>

        <!-- Login -->
        <div id="loginForm">
            <h2>Iniciar Sesión</h2>
            <form id="formLogin">
                <input type="email" name="Email" placeholder="Correo" required />
                <input type="password" name="Contrasenna" placeholder="Contraseña" required />
                <button type="submit">Ingresar</button>
            </form>

            <p>¿No tienes cuenta? <a id="showRegister">Regístrate</a></p>

            <div id="loginMsg"></div>
        </div>

        <!-- Register -->
        <div id="registerForm" class="hidden">
            <h2>Registro</h2>
            <form id="formRegister">
                <input type="text" name="Nombre" placeholder="Nombre" required />
                <input type="text" name="Apellido" placeholder="Apellido" required />
                <input type="email" name="Email" placeholder="Correo" required />
                <input type="password" name="Contrasenna" placeholder="Contraseña" required />
                <input type="password" name="ConfirmarContrasenna" placeholder="Confirmar Contraseña" required />
                <button type="submit">Crear cuenta</button>
            </form>

            <p>¿Ya tienes cuenta? <a id="showLogin">Inicia sesión</a></p>

            <div id="registerMsg"></div>
        </div>
    </div>
</div>
