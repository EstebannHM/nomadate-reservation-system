@model IEnumerable<nomadate_web.Models.Habitacion>
@{
    ViewData["Title"] = "Habitaciones";
}

<link rel="stylesheet" href="~/css/habitaciones.css" asp-append-version="true" />

<!-- Sección Hero con Barra de Búsqueda -->
<section class="hero-section">
    <div class="hero-overlay">
        <div class="hero-content">
            <h1 class="hero-title">Nuestras Habitaciones</h1>
            <p class="hero-subtitle">Encuentra el espacio perfecto para tu estadía</p>
            
            <!-- Barra de Búsqueda -->
            <div class="search-bar">
                <form class="search-form">
                    <div class="search-group">
                        <label for="checkIn">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            Fecha de Entrada
                        </label>
                        <input type="date" id="checkIn" name="checkIn" required>
                    </div>

                    <div class="search-group">
                        <label for="checkOut">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            Fecha de Salida
                        </label>
                        <input type="date" id="checkOut" name="checkOut" required>
                    </div>

                    <div class="search-group">
                        <label for="guestName">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            Nombre Completo
                        </label>
                        <input type="text" id="guestName" name="guestName" placeholder="Tu nombre" required>
                    </div>

                    <div class="search-group">
                        <label for="guests">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                            Huéspedes
                        </label>
                        <select id="guests" name="guests" required>
                            <option value="">Seleccionar</option>
                            <option value="1">1 Huésped</option>
                            <option value="2">2 Huéspedes</option>
                            <option value="3">3 Huéspedes</option>
                            <option value="4">4 Huéspedes</option>
                            <option value="5">5+ Huéspedes</option>
                        </select>
                    </div>

                    <button type="submit" class="btn-search">
                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                        Buscar Disponibilidad
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Lista de Habitaciones -->
<section class="rooms-section">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="rooms-grid">
                @foreach (var habitacion in Model)
                {
                    <div class="room-card" data-capacity="@habitacion.Capacidad" data-price="@habitacion.Precio" data-ac="@habitacion.TieneAire" data-tv="@habitacion.TieneTv">
                        <div class="room-image">
                            @if (!string.IsNullOrEmpty(habitacion.RutaImagen))
                            {
                                <img src="@habitacion.RutaImagen" alt="Habitación @habitacion.NumeroHabitacion">
                            }
                            else
                            {
                                <img src="~/images/room-default.jpg" alt="Habitación @habitacion.NumeroHabitacion">
                            }
                            <div class="room-badge">@habitacion.NumeroHabitacion</div>
                        </div>
                        <div class="room-content">
                            <h3>Habitación @habitacion.NumeroHabitacion</h3>
                            <p class="room-description">@(habitacion.Descripcion ?? "Habitación cómoda y acogedora")</p>
                            
                            <div class="room-amenities">
                                <span class="amenity">
                                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="9" cy="7" r="4"></circle>
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                    </svg>
                                    @habitacion.Capacidad personas
                                </span>
                                @if (habitacion.TieneAire)
                                {
                                    <span class="amenity">
                                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                            <polyline points="14 2 14 8 20 8"></polyline>
                                            <line x1="12" y1="18" x2="12" y2="12"></line>
                                            <line x1="9" y1="15" x2="15" y2="15"></line>
                                        </svg>
                                        A/C
                                    </span>
                                }
                                @if (habitacion.TieneTv)
                                {
                                    <span class="amenity">
                                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="2" y="7" width="20" height="15" rx="2" ry="2"></rect>
                                            <polyline points="17 2 12 7 7 2"></polyline>
                                        </svg>
                                        TV
                                    </span>
                                }
                            </div>

                            <div class="room-footer">
                                <div class="room-price">
                                    <span class="price-amount">$@habitacion.Precio</span>
                                    <span class="price-period">/ noche</span>
                                </div>
                                <a asp-action="Details" asp-route-id="@habitacion.IdHabitacion" class="btn-reserve">Ver Detalles</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="9" y1="9" x2="15" y2="15"></line>
                    <line x1="15" y1="9" x2="9" y2="15"></line>
                </svg>
                <h3>No hay habitaciones disponibles</h3>
                <p>Por favor, intenta más tarde o contacta con nosotros.</p>
            </div>
        }
    </div>
</section>
